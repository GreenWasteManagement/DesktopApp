<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="1920" prefHeight="1080" style="-fx-background-color: #E5E5E5;">

    <!-- Logo and Title -->
    <VBox layoutX="20" layoutY="20">
        <HBox spacing="10">
            <ImageView fitHeight="126" fitWidth="126" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/LOGO.png"/>
            </ImageView>
            <Label text="Viana Circular" style="-fx-font-size: 18px; -fx-text-fill: #006400; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Login Box -->
    <VBox layoutX="200" layoutY="100" spacing="10" style="-fx-background-color: #006400; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Painel de gestão" style="-fx-font-size: 18px; -fx-text-fill: #006400; -fx-font-weight: bold;"/>
        <Label text="Autenticação" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Username -->
        <Label text="Nome de utilizador:" style="-fx-text-fill: white;"/>
        <TextField fx:id="usernameField" prefWidth="200"/>

        <!-- Password -->
        <Label text="Palavra-passe:" style="-fx-text-fill: white;"/>
        <PasswordField fx:id="passwordField" prefWidth="200"/>

        <!-- Show Password Option -->
        <HBox spacing="5">
            <CheckBox fx:id="showPasswordCheckBox"/>
            <Label text="Mostrar palavra-passe" style="-fx-text-fill: white;"/>
        </HBox>

        <!-- Login Button -->
        <Button text="Aceder" fx:id="loginButton" style="-fx-background-color: white; -fx-text-fill: #006400; -fx-font-weight: bold;"/>
    </VBox>

</AnchorPane>
