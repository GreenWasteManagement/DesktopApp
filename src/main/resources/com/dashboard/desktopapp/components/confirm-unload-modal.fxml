<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="modal" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefWidth="600.0" style="-fx-background-color: #D9D9D9;"
      stylesheets="@../style.css" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.dashboard.desktopapp.components.ConfirmUnloadModalController">
    <children>
        <HBox fillHeight="false" VBox.vgrow="NEVER">
            <children>
                <Label text="Confirmar descarregamento">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region maxHeight="0.0" prefHeight="0.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <Label text="Confime as informações de descarregamento:">
            <VBox.margin>
                <Insets top="32.0"/>
            </VBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="id" layoutX="42.0" layoutY="122.0" text="ID:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="capacity" layoutX="42.0" layoutY="128.0" text="Capacidade:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="containerLocation" layoutX="42.0" layoutY="151.0" text="Localização:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="currentVolume" layoutX="42.0" layoutY="174.0" text="Volume atual:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_RIGHT" spacing="24.0" VBox.vgrow="ALWAYS">
            <children>
                <Button mnemonicParsing="false" onAction="#onCancelBtnClick"
                        style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-border-radius: 15;"
                        styleClass="hover" text="Cancelar" textAlignment="CENTER" textFill="#c03d3d">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <padding>
                        <Insets bottom="4.0" left="32.0" right="32.0" top="4.0"/>
                    </padding>
                </Button>
                <Button mnemonicParsing="false" onAction="#onConfirmBtnClick"
                        style="-fx-background-color: #057222; -fx-background-radius: 15; -fx-border-radius: 15;"
                        styleClass="hover" text="Confirmar" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <padding>
                        <Insets bottom="4.0" left="32.0" right="32.0" top="4.0"/>
                    </padding>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="32.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
    </padding>
</VBox>
